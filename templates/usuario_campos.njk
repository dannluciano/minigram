<input type="hidden" name="_csrf" value="{{csrf}}">

<div class="form-group">
  <label for="nome">Nome de Usuario:</label>
  <input class="form-control" type="text" name="nome" id="nome" value="{{usuario.nome}}" required>
</div>

<div class="form-group">
  <label for="email">E-mail:</label>
  <input class="form-control" type="email" name="email" id="email" value="{{usuario.email}}" required>
</div>

<div class="form-group">
  <label for="senha">Senha:</label>
  <input class="form-control" type="password" name="senha" id="senha" value="{{usuario.senha}}" required>
</div>